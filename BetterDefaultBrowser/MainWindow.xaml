<metro:MetroWindow x:Class="BetterDefaultBrowser.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:BetterDefaultBrowser" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:views='clr-namespace:BetterDefaultBrowser.Views' xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz" xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls" xmlns:properties="clr-namespace:BetterDefaultBrowser.Properties" mc:Ignorable="d" Title="{x:Static properties:Resources.AppName}" ShowIconOnTitleBar="True" Height="600" Width="800" TextElement.Foreground="{DynamicResource MaterialDesignBody}" TextElement.FontWeight="Medium" TextElement.FontSize="14" TextOptions.TextFormattingMode="Ideal" TextOptions.TextRenderingMode="Auto" Background="{DynamicResource MaterialDesignPaper}" FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto" BorderThickness="1" Icon="BDBStupidLogo.ico">
    <Window.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml" />
    </Window.Resources>
    <metro:MetroWindow.RightWindowCommands>
        <metro:WindowCommands>
            <Button Content="Settings"></Button>
        </metro:WindowCommands>
    </metro:MetroWindow.RightWindowCommands>
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">

        </DockPanel>
        <DockPanel DockPanel.Dock="Left">

        </DockPanel>
        <Grid>
            <dragablz:TabablzControl>
                <dragablz:TabablzControl.InterTabController>
                    <dragablz:InterTabController MoveWindowWithSolitaryTabs="True">
                        <dragablz:InterTabController.InterTabClient>
                            <local:InterTabController />
                        </dragablz:InterTabController.InterTabClient>
                    </dragablz:InterTabController>
                </dragablz:TabablzControl.InterTabController>
                <TabItem x:Name='RefMe' Header="HELLO" />
                <TabItem Header="MATERIAL">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Material Design</TextBlock>
                </TabItem>
                <TabItem Header="DESIGN">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Looks Quite Nice</TextBlock>
                </TabItem>
            </dragablz:TabablzControl>
        </Grid>
    </DockPanel>
</metro:MetroWindow>















