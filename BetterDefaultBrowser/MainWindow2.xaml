<Window x:Class="BetterDefaultBrowser.MainWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterDefaultBrowser"
        mc:Ignorable="d"
        Title="MainWindow2" Height="300" Width="300">
    <Window.Resources>
        <local:DefaultConverter x:Key="defaultConverter"/>
        <local:ProtocolConverter x:Key="protocolConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="92*"/>
            <RowDefinition Height="177*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="74,38,0,0" VerticalAlignment="Top" Width="65" Grid.Row="1" Height="22" SelectedIndex="{Binding Path=Protocol,Converter={StaticResource protocolConverter}}">
            <ComboBoxItem Content="http" HorizontalAlignment="Left" Width="65" IsSelected="True"/>
            <ComboBoxItem Content="https" HorizontalAlignment="Left" Width="65"/>
            <ComboBoxItem Content="ftp" HorizontalAlignment="Left" Width="65"/>
        </ComboBox>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="74,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" ToolTip="enter a website e.g. www.google.de" Grid.Row="1" Text="{Binding Path=Url, Mode=TwoWay}"/>
        <Label x:Name="label" Content="Website" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="52"/>
        <Label x:Name="label1" Content="Protocol" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="54"/>
        <Label x:Name="label2" Content="Add a new filter" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="94"/>
        <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" Margin="74,130,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120"/>
        <ListBox x:Name="browserList" HorizontalAlignment="Stretch" Height="72" Margin="10,10,0,0" VerticalAlignment="Top" Width="262">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="textBox3" Text="{Binding Name}" HorizontalAlignment="Left" Grid.Column="0"/>
                        <TextBlock x:Name="textBox5" Text="{Binding Path=IsDefault, Converter={StaticResource defaultConverter}}" HorizontalAlignment="Left" Grid.Column="1"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="188,40,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="214,124,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="214,145,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Button x:Name="buttonRefresh" Content="Refresh" HorizontalAlignment="Left" Margin="188,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="buttonRefresh_Click"/>

    </Grid>
</Window>
