<UserControl x:Class="BetterDefaultBrowser.Views.FilterActionBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BetterDefaultBrowser.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:properties="clr-namespace:BetterDefaultBrowser.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <materialDesign:ColorZone Padding="4" Background="{StaticResource PrimaryHueDarkBrush}">
            <StackPanel Orientation="Horizontal">
                <Button Style="{DynamicResource MaterialDesignToolButton}" Width="Auto" Height="Auto"
                    ToolTip="{x:Static properties:Resources.LabelSave}"
                    Command="{Binding Path=SaveCommand}" >
                    <materialDesign:PackIcon Kind="ContentSave" Foreground="{StaticResource PrimaryHueMidForegroundBrush}"
                                         Height="30" Width="30"/>
                </Button>
            </StackPanel>
        </materialDesign:ColorZone>
    </Grid>
</UserControl>
